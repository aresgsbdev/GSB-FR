{% extends 'base.html.twig' %}

{% block title %}Liste des état des factures.{% endblock %}

{% block body %}
    <h1>Liste des état des factures.{{mon_nom}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ligne_status in ligne_statuses %}
            <tr>
                <td>{{ ligne_status.id }}</td>
                <td>{{ ligne_status.wording }}</td>
                <td>
                    <a href="{{ path('line_status_show', {'id': ligne_status.id}) }}">Voir</a>
                    <a href="{{ path('line_status_edit', {'id': ligne_status.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ligne_status_new') }}">Create new</a>
{% endblock %}

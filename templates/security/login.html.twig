{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
		<div class="container d-flex justify-content-center text-center mt-5">
		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}
		<br/>

		<div class="card border-primary" style="max-width: 50rem; box-shadow: 0 4px 8px">
			<h1 class="card-header text-center">Connexion</h1>
			<div class="card-body text-primary">
				<img src="https://sites.google.com/site/portfolioclementparent/_/rsrc/1394810844515/mon-carnet-de-bord/travaux-et-projets/projet-gsb/logo.png">
				<br>
				</br>
				<form class="user" method="post">
					<div class="form-group m-2">
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" required autofocus placeholder="Saisissez votre Email...">
					</div>
					<div class="form-group m-2">
						<input type="password" name="password" id="inputPassword" class="form-control form-control-user" placeholder="Mot de passe..." required>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<button type="submit" name="login" class="btn btn-primary m-2">Se connecter</button>
						<div class="">
							<a href="{{path ('contact_new') }}" class="btn btn-outline-primary" type="submit">Cr√©er un compte</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

{% endblock %}

